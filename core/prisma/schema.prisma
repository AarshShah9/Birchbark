generator client {
  provider = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "sqlite"
  url  = env("DATABASE_URL")
}

model Doctor {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  phone     String
  specialty String?

  // Relationships
  appointments  Appointment[] @relation("DoctorAppointments")
  clinics       Clinic[]      @relation("DoctorClinics")
  patients      Patient[]     @relation("DoctorPatients")
}

model Clinic {
  id      Int       @id @default(autoincrement())
  name    String
  address String
  city    String
  state   String
  zipCode String

  // Relationships
  doctors      Doctor[]      @relation("DoctorClinics")
  patients     Patient[]     @relation("ClinicPatients")
  appointments Appointment[] @relation("AppointmentClinics")
}

model Patient {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  phone     String
  age       Int?
  height    Int?
  weight    Int?

  // Relationships
  appointments  Appointment[] @relation("PatientAppointments")
  doctors       Doctor[]      @relation("DoctorPatients")
  clinics       Clinic[]      @relation("ClinicPatients")
}

model Appointment {
  id        Int       @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime

  // Relationships
  doctors    Doctor[]  @relation("DoctorAppointments")
  patients   Patient[] @relation("PatientAppointments")
  clinics    Clinic[]  @relation("AppointmentClinics")
}
